<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/overworldbattle1"
    android:id="@+id/layout2"
    tools:context="com.example.zniannar.measureisland.IntroBattle">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Chronometer
            android:textColor="#ed1d1d"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_width="185dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:gravity="center"
            android:background="#afafaf"/>

        <Chronometer
            android:textColor="#ed1d1d"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_width="185dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:gravity="center"
            android:background="#afafaf"/>

        <Chronometer
            android:textColor="#ed1d1d"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_width="185dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:gravity="center"
            android:background="#afafaf"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="185dp"
            android:layout_height="120dp"
            android:background="#504a4a"
            android:textColor="#ffee30"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/aliceSpeech"
            android:layout_marginLeft="10dp"
            android:layout_width="185dp"
            android:layout_height="120dp"
            android:background="#504a4a"
            android:textColor="#ffee30"
            android:textSize="20sp"
            android:text="This is your first battle using the art of Math Kwon Do!"
            />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="185dp"
            android:layout_height="120dp"
            android:background="#504a4a"
            android:textColor="#ffee30"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/scrollThroughText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:textAllCaps="false"
            android:text="Read on..."
            android:onClick="scrollThroughText"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="0dp"
            android:layout_width="200dp"
            android:layout_height="270dp"
            android:scaleType="fitXY"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="270dp"
            android:scaleType="fitXY"
            android:src="@drawable/npcalice"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="270dp"
            android:scaleType="fitXY"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_marginLeft="0dp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="#be3939"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:text="---"
            android:gravity="center"/>

        <Button
            android:layout_marginLeft="0dp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="#61b65d"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:text="---"
            android:gravity="center"/>

        <Button
            android:layout_marginLeft="0dp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="#b9b135"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:text="---"
            android:gravity="center"/>

        <Button
            android:layout_marginLeft="0dp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="#5a69f4"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:text="---"
            android:gravity="center"/>

    </LinearLayout>

    <ImageView
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:scaleType="fitXY"
        android:src="@drawable/hpbars1"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="0dp">



    </LinearLayout>

</LinearLayout>
